	Scanner scanner = new Scanner(System.in);
	System.out.println("Cümle giriniz: ");
	
	String cumle = scanner.nextLine();
	
		
		int sayac=0;
		for (int i = 0; i < x.length(); i++) {
			if(x.charAt(i)==y) {
